<p id="notice"><%= notice %></p>

<h1>Listing Metrics</h1>

<table>
  <thead>
    <tr>
      <th>Metric name</th>
      <th>Description metric</th>
      <th>Calculus date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @metrics.each do |metric| %>
      <tr>
        <td><%= metric.metric_name %></td>
        <td><%= metric.description_metric %></td>
        <td><%= metric.calculus_date %></td>
        <td><%= link_to 'Show', metric %></td>
        <td><%= link_to 'Edit', edit_metric_path(metric) %></td>
        <td><%= link_to 'Destroy', metric, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

