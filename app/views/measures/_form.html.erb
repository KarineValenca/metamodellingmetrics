<%= form_for(@measure) do |f| %>
  <% if @measure.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@measure.errors.count, "error") %> prohibited this measure from being saved:</h2>

      <ul>
      <% @measure.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name_measure %><br>
    <%= f.text_field :name_measure %>
  </div>
  <div class="field">
    <%= f.label :description_measure %><br>
    <%= f.text_area :description_measure %>
  </div>
  <div class="field">
    <%= f.label :date_measure %><br>
    <%= f.date_select :date_measure %>
  </div>
  <div class="field">
    <%= f.label :value_measure %><br>
    <%= f.text_field :value_measure %>
  </div>
  <div class="field">
    <%= f.label "Escala"%><br>
    <%= f.select :scale_id, Scale.all.collect {|scale| [scale.name_scale, scale.id]} %>
  </div>
  <div class="field">
    <%= f.label "Unidade de Medida"%><br>
    <%= f.select :unit_of_measurement_id, UnitOfMeasurement.all.collect {|unit_of_measurement| [unit_of_measurement.name, unit_of_measurement.id]} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
