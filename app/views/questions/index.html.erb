<p id="notice"><%= notice %></p>

<h1>Listando questões</h1>

<table>
  <thead>
    <tr>
      <th>Nome da questão</th>
      <th>Descrição da questão</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.question_name %></td>
        <td><%= question.question_description %></td>
        <td><%= link_to 'Detalhes', question %></td>
        <td><%= link_to 'Editar', edit_question_path(question) %></td>
        <td><%= link_to 'Excluir', question, method: :delete, data: { confirm: 'Você tem certeza' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova questão', new_question_path(:goal => @goal.id) %>
