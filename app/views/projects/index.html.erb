<p id="notice"><%= notice %></p>

<h1>Seus projetos</h1>

<table>
  <thead>
    <tr>
      <th>Nome do projeto</th>
      <th>Descrição do projeto</th>
      <th>Data de início</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name_project %></td>
        <td><%= project.description %></td>
        <td><%= project.start_date_project %></td>
        <td><%= link_to 'Detalhes', project %></td>
        <td><%= link_to 'Editar', edit_project_path(project) %></td>
        <td><%= link_to 'Excluir', project, method: :delete, data: { confirm: 'Tem Certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Projeto', new_project_path %>
