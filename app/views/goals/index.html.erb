<p id="notice"><%= notice %></p>


<h1>Listing Goals</h1>
<table>
  <thead>
    <tr>
      <th>Goal name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>

        <td><%= goal.name %></td>
        <td><%= goal.description %></td>
        <td><%= link_to 'Details', goal %></td>
        <td><%= link_to 'Edit', edit_project_goal_path(:id => goal.id, :project_id => @project.id) %></td>
        <td><%= link_to 'Delete', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Goal', new_goal_path(:project => @project.id) %>
