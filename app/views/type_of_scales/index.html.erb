<h1>Listing Type Of Scales</h1>

<table>
  <thead>
    <tr>
      <th>Name type scale</th>
      <th>Description type scale</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @type_of_scales.each do |type_of_scale| %>
      <tr>
        <td><%= type_of_scale.name_type_scale %></td>
        <td><%= type_of_scale.description_type_scale %></td>
        <td><%= link_to 'Show', type_of_scale %></td>
        <td><%= link_to 'Edit', edit_type_of_scale_path(type_of_scale) %></td>
        <td><%= link_to 'Destroy', type_of_scale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

